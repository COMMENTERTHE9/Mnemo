{
  "manifest_version": 3,
  "name": "Mnemo Cookie Sync",
  "version": "1.0",
  "description": "Automatically sync YouTube cookies to your Mnemo server",
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}